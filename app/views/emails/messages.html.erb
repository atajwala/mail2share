<%= stylesheet_link_tag 'custom', :media => 'screen' %>
<script type="text/javascript">
	document.getElementsByTagName('section')[0].classList.add('spacer');
	document.getElementById('container').style.width = '900px';
</script>
<div>
	
<div id="backtoinbox">	
<%= link_to "<< Back to #{@email.username}'s Inbox", "/#{@email.username}" %>
</div>

<div id="twitbox">
<script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
   <a href="http://twitter.com/share" class="twitter-share-button"
        data-url="<%= @share_url %>"
        data-via="mail2share"
        data-text="I just posted new mail!"
        data-related="anywhere:"
        data-count="vertical">Tweet</a>
</div>

<div id="fbbox">
<iframe src="http://www.facebook.com/plugins/like.php?
href=<%= @share_url %>;
layout=standard&amp;show_faces=true&amp;width=450&amp;action=like&amp;colorscheme=light&amp;height=80" scrolling="no" frameborder="0" 
style="border:none; overflow:hidden; width:150px; height:40px;" allowTransparency="true">
</iframe>
</div>

<div id="inboxheader">
<ul>
<li>
	<b> SUBJECT: </b> <%= @message.subject %>
</li>
<li>
	<b> TIME-STAMP: </b> <%= pretty_date @message.date.to_s %>
</li>
</ul>
</div>    

<div id="mailbody">
<%= raw @body %>
</div>

<div id="fb-root"></div>
<script src="http://connect.facebook.net/en_US/all.js#appId=112091452135684&amp;xfbml=1">
</script><fb:comments href="<%= @share_url %>" num_posts="2" width="500">
</fb:comments>

